{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2015",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "lib",
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": [
            "es6",
            "dom",
            "es2017"
        ]
    },
    "include": [
        "src/**/*"
    ]
}